{
  "name": "lexomni-mcp",
  "version": "0.0.0-dev",
  "type": "module",
  "description": "MCP server for local knowledge management with MD and PDF indexing",
  "author": "PagansDev (Paulo Gabriel Neves Santos) <https://github.com/PagansDev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PagansDev/lexomni-mcp.git"
  },
  "homepage": "https://www.pagansdev.site/en/lexomni",
  "bugs": {
