{
  "name": "lexomni-mcp",
  "version": "0.0.0-dev",
  "type": "module",
  "description": "MCP server for local knowledge management with MD and PDF indexing",
  "author": "PagansDev (Paulo Gabriel Neves Santos) <https://github.com/PagansDev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PagansDev/lexomni-mcp.git"
  },
  "homepage": "https://github.com/PagansDev/lexomni-mcp#readme",
  "bugs": {
    "url": "https://github.com/PagansDev/lexomni-mcp/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "files": ["dist"],
  "bin": {
    "lexomni-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "start": "node dist/index.js",
    "dev": "tsup src/index.ts --format esm --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["mcp", "model-context-protocol", "knowledge-management"],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^4.0.0",
    "better-sqlite3": "^11.8.1",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "tsup": "^8.3.5",
    "@types/node": "^22.10.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/pdf-parse": "^1.1.4"
  }
}
